---
import { socials } from "@/data/socials";

interface Project {
  name: string;
  description: string;
  url?: string;
  tags: string[];
  status: "live" | "building" | "beta";
  flagship?: boolean;
}

const projects: Project[] = [
  {
    name: "AudioPod AI",
    description: "Unified AI audio workstation — diarization, noise reduction, stem splitting, voice cloning, translation.",
    url: "https://audiopod.ai",
    tags: ["AI/ML", "Audio"],
    status: "live",
    flagship: true,
  },
  {
    name: "AgentDrive",
    description: "AI agent framework on Cloudflare Workers. Build, deploy, and monitor agents at the edge.",
    url: "https://agentdrive.sh",
    tags: ["AI Agents", "DevTools"],
    status: "live",
  },
  {
    name: "Findable",
    description: "AI-powered search and discovery platform. Semantic search and intelligent recommendations.",
    url: "https://findable.sh",
    tags: ["Search", "AI/ML"],
    status: "live",
    flagship: true,
  },
  {
    name: "Go2.gg",
    description: "URL shortener with analytics — custom domains, click tracking, developer API. Built on CF edge.",
    url: "https://go2.gg",
    tags: ["DevTools", "Analytics"],
    status: "live",
  },
  {
    name: "NameMyApp",
    description: "AI name generator for startups and products. Brandable names with domain availability.",
    url: "https://namemy.app",
    tags: ["AI/ML", "Tools"],
    status: "live",
  },
  {
    name: "MailMolt",
    description: "Email warm-up and deliverability. Improve sender reputation, land in primary inbox.",
    url: "https://mailmolt.com",
    tags: ["Email", "SaaS"],
    status: "live",
  },
  {
    name: "ClawOcean",
    description: "Web scraping API. Structured data from any website with AI parsing and anti-bot handling.",
    url: "https://clawocean.com",
    tags: ["Data", "API"],
    status: "live",
  },
  {
    name: "AudioWhisper",
    description: "AI meeting notes and ultrafast dictation. Speaker detection, summaries, real-time voice-to-text.",
    url: "https://audiowhisper.com",
    tags: ["AI/ML", "Audio"],
    status: "building",
  },
  {
    name: "UnSearch",
    description: "RAG in 5 minutes. Document upload, semantic search, AI answers — complete API.",
    url: "https://unsearch.ai",
    tags: ["RAG", "API"],
    status: "building",
  },
  {
    name: "Competely",
    description: "AI competitor monitoring. Track website changes, pricing updates, feature launches.",
    url: "https://competely.ai",
    tags: ["Intelligence", "SaaS"],
    status: "building",
  },
  {
    name: "ShipQuest",
    description: "Production-ready SaaS boilerplate. Next.js + Cloudflare with auth, payments, AI.",
    url: "https://shipquest.dev",
    tags: ["Boilerplate", "DevTools"],
    status: "live",
  },
  {
    name: "Legally",
    description: "AI contract review. Plain English summary with risk highlights in 60 seconds.",
    tags: ["AI/ML", "Legal"],
    status: "building",
  },
];
---

<section id="projects" class="py-28 px-6">
  <div class="mx-auto max-w-5xl">
    <p class="font-mono text-xs text-text-muted mb-4 tracking-wide">
      <span class="text-accent">#</span> shipped
    </p>
    <p class="text-text-muted text-sm mb-10">
      Building at <a href={socials.studio} target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">Roushan Venture Studio</a>
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-3">
      {projects.map((project) => {
        const Tag = project.url ? "a" : "div";
        return (
          <Tag
            href={project.url}
            target={project.url ? "_blank" : undefined}
            rel={project.url ? "noopener noreferrer" : undefined}
            class="group block p-4 rounded-lg bg-bg-card hover:bg-bg-secondary transition-colors"
          >
            <div class="flex items-center gap-2 mb-2">
              <h3 class="text-sm font-medium group-hover:text-accent transition-colors">
                {project.name}
              </h3>
              <span class={`inline-block w-1.5 h-1.5 rounded-full shrink-0 ${
                project.status === "live" ? "bg-emerald-500" : "bg-yellow-500/60"
              }`} />
              {project.url && (
                <svg class="w-3 h-3 text-text-muted/30 ml-auto shrink-0 group-hover:text-text-muted transition-colors" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                </svg>
              )}
            </div>
            <p class="text-xs text-text-muted leading-relaxed line-clamp-2">
              {project.description}
            </p>
          </Tag>
        );
      })}
    </div>
  </div>
</section>
