---
const ventures = [
  {
    name: "Roushan Venture Studio",
    role: "Founder",
    description: "Building 20+ AI-powered SaaS products across voice, search, content, dev tools, and business automation.",
    url: "https://roushan.xyz",
  },
  {
    name: "AudioPod AI",
    role: "Founder",
    description: "Unified AI audio workstation — Like Canva for Audio. Seamless tools for content creators.",
    url: "https://audiopod.ai",
  },
];

const credentials = [
  "IIM Calcutta MBA",
  "Ex-Paytm (DGM, Soundbox)",
  "Ex-Ninjacart (Strategy & Growth)",
  "Ex-Bharti Airtel (500cr+ P&L)",
];
---

<section id="about" class="py-28 px-6">
  <div class="mx-auto max-w-5xl">
    <p class="font-mono text-xs text-text-muted mb-4 tracking-wide">
      <span class="text-accent">#</span> about
    </p>

    <p class="text-text-secondary max-w-2xl mb-10 leading-relaxed">
      Left corporate to build AI products full-time.
      After leading product at Paytm, Ninjacart, and Airtel,
      I now ship 20+ products from a solo venture studio.
    </p>

    <!-- Credentials — inline, quiet -->
    <div class="flex flex-wrap gap-2 mb-14">
      {credentials.map((cred) => (
        <span class="font-mono text-xs text-text-muted px-2.5 py-1 rounded bg-bg-secondary">
          {cred}
        </span>
      ))}
    </div>

    <!-- Ventures -->
    <div class="grid md:grid-cols-2 gap-4">
      {ventures.map((v) => (
        <a
          href={v.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group block p-5 rounded-lg bg-bg-card hover:bg-bg-card/80 transition-colors"
        >
          <div class="flex items-center justify-between mb-2">
            <span class="font-mono text-[10px] text-accent uppercase tracking-widest">{v.role}</span>
            <svg class="w-3.5 h-3.5 text-text-muted/40 group-hover:text-text-muted transition-colors" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
            </svg>
          </div>
          <h3 class="font-semibold mb-1.5 group-hover:text-accent transition-colors">{v.name}</h3>
          <p class="text-sm text-text-muted leading-relaxed">{v.description}</p>
        </a>
      ))}
    </div>
  </div>
</section>
