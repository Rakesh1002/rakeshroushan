---
import { socials, siteConfig } from "@/data/socials";
import Starfield from "@/components/3d/Starfield";
import ChatIsland from "@/components/ChatIsland";
---

<section class="relative min-h-screen flex items-center justify-center pt-20">
  <!-- 3D Starfield background -->
  <Starfield client:visible />

  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,oklch(0.205_0.05_41.116),transparent_60%)]"
  >
  </div>

  <div class="relative z-10 mx-auto max-w-4xl px-6 text-center">
    <!-- Status badge -->
    <div class="mb-8 inline-flex items-center gap-2 rounded-full border border-border px-4 py-1.5 text-sm text-text-muted">
      <span class="h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
      Building at Roushan Venture Studio
    </div>

    <h1
      class="text-5xl md:text-7xl font-bold tracking-tight leading-[1.1] mb-6"
    >
      Hey, I'm
      <span
        class="bg-gradient-to-r from-accent to-orange-400 bg-clip-text text-transparent"
      >
        Rakesh Roushan
      </span>
    </h1>

    <p class="text-xl md:text-2xl text-text-secondary mb-4 font-medium">
      {siteConfig.title}
    </p>

    <p
      class="text-base md:text-lg text-text-muted max-w-2xl mx-auto mb-10 leading-relaxed"
    >
      {siteConfig.bio}
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
      <a
        href="#projects"
        class="px-6 py-3 bg-accent hover:bg-accent-hover text-white rounded-lg font-medium transition-colors"
      >
        View my work
      </a>
      <a
        href={socials.studio}
        target="_blank"
        rel="noopener noreferrer"
        class="px-6 py-3 border border-border hover:border-border-hover text-text-secondary hover:text-text rounded-lg font-medium transition-colors"
      >
        Venture Studio
      </a>
    </div>

    <!-- Social links -->
    <div class="flex items-center justify-center gap-6">
      <a
        href={socials.github}
        target="_blank"
        rel="noopener noreferrer"
        class="text-text-muted hover:text-text transition-colors"
        aria-label="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"
          ></path>
        </svg>
      </a>
      <a
        href={socials.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="text-text-muted hover:text-text transition-colors"
        aria-label="LinkedIn"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
          ></path>
        </svg>
      </a>
      <a
        href={socials.twitter}
        target="_blank"
        rel="noopener noreferrer"
        class="text-text-muted hover:text-text transition-colors"
        aria-label="Twitter"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
          ></path>
        </svg>
      </a>
      <a
        href={`mailto:${socials.email}`}
        class="text-text-muted hover:text-text transition-colors"
        aria-label="Email"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
          ></path>
        </svg>
      </a>
    </div>

    <!-- AI Chat trigger -->
    <div class="mt-8">
      <ChatIsland client:idle />
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg
      class="w-6 h-6 text-text-muted"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
