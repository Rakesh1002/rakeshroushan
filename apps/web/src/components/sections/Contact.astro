---
import { socials, siteConfig } from "@/data/socials";

const contactLinks = [
  { label: "email", value: socials.email, href: `mailto:${socials.email}` },
  { label: "linkedin", value: "rakeshroushan1002", href: socials.linkedin },
  { label: "github", value: "Rakesh1002", href: socials.github },
  { label: "twitter", value: "@buildwithrakesh", href: socials.twitter },
];
---

<section id="contact" class="py-28 px-6">
  <div class="mx-auto max-w-5xl">
    <p class="font-mono text-xs text-text-muted mb-4 tracking-wide">
      <span class="text-accent">#</span> contact
    </p>

    <p class="text-text-secondary mb-10 max-w-xl leading-relaxed">
      Open to AI product advisory, speaking, partnerships, and co-building.
    </p>

    <div class="space-y-2 max-w-lg">
      {contactLinks.map((link) => (
        <a
          href={link.href}
          target={link.href.startsWith("mailto") ? undefined : "_blank"}
          rel={link.href.startsWith("mailto") ? undefined : "noopener noreferrer"}
          class="group flex items-center justify-between py-3 border-b border-border/50 hover:border-accent/30 transition-colors"
        >
          <span class="font-mono text-xs text-text-muted">{link.label}</span>
          <span class="text-sm group-hover:text-accent transition-colors">{link.value}</span>
        </a>
      ))}
    </div>

    <p class="text-xs text-text-muted/60 mt-8 font-mono">
      {siteConfig.location}
    </p>
  </div>
</section>
