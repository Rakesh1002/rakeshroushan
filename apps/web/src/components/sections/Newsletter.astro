<section id="newsletter" class="py-24 px-6">
  <div class="mx-auto max-w-6xl">
    <div class="relative overflow-hidden rounded-2xl border border-border bg-gradient-to-br from-bg-card to-bg-secondary p-8 md:p-12">
      <div class="relative z-10 max-w-xl">
        <p class="text-xs uppercase tracking-widest text-accent mb-3 font-medium">Newsletter</p>
        <h2 class="text-3xl font-bold mb-4">Frameworks for builders</h2>
        <p class="text-text-secondary mb-8 leading-relaxed">
          Weekly insights on AI product strategy, execution systems, and lessons from building 20+ products as a solo founder. No fluff — just frameworks you can use Monday morning.
        </p>

        <form
          action="#"
          method="POST"
          class="flex flex-col sm:flex-row gap-3"
          id="newsletter-form"
        >
          <input
            type="email"
            name="email"
            required
            placeholder="you@company.com"
            class="flex-1 px-4 py-3 rounded-lg bg-bg border border-border text-text placeholder:text-text-muted focus:outline-none focus:border-accent transition-colors text-sm"
          />
          <button
            type="submit"
            class="px-6 py-3 bg-accent hover:bg-accent-hover text-white font-medium rounded-lg transition-colors text-sm whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>

        <p class="text-xs text-text-muted mt-4">
          Join 0 → 1 builders. Unsubscribe anytime.
        </p>
      </div>

      <!-- Background decoration -->
      <div class="absolute top-0 right-0 w-64 h-64 bg-accent/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 right-1/4 w-48 h-48 bg-accent/3 rounded-full blur-2xl translate-y-1/2"></div>
    </div>
  </div>
</section>
