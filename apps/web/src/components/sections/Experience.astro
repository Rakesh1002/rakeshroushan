---
import { experience } from "@/data/experience";
---

<section id="experience" class="py-24 px-6">
  <div class="mx-auto max-w-6xl">
    <h2 class="text-3xl font-bold mb-4">Experience</h2>
    <p class="text-text-muted max-w-2xl mb-12">
      From building 0-1 products to managing multi-crore P&Ls across fintech, agri-tech, and telecom.
    </p>

    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-0 md:left-8 top-0 bottom-0 w-px bg-border"></div>

      <div class="space-y-8">
        {experience.map((exp) => (
          <div class="relative pl-8 md:pl-20">
            <!-- Dot -->
            <div class={`absolute left-0 md:left-8 top-1 -translate-x-1/2 w-3 h-3 rounded-full border-2 ${
              exp.current ? "bg-emerald-500 border-emerald-500" : "bg-bg border-border"
            }`} />

            <div class="group p-5 rounded-xl border border-border hover:border-border-hover bg-bg-card/50 transition-all">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-2">
                <div>
                  <h3 class="font-semibold text-lg">
                    {exp.title}
                    <span class="text-accent"> @ {exp.company}</span>
                  </h3>
                  <p class="text-sm text-text-muted">{exp.location}</p>
                </div>
                <div class="flex items-center gap-2">
                  {exp.current && (
                    <span class="text-xs px-2 py-0.5 rounded-full bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
                      Current
                    </span>
                  )}
                  <span class="text-sm text-text-muted whitespace-nowrap">{exp.period}</span>
                </div>
              </div>

              <p class="text-text-secondary text-sm mb-3 leading-relaxed">
                {exp.description}
              </p>

              <div class="flex flex-wrap gap-2">
                {exp.tags.map((tag) => (
                  <span class="text-xs px-2.5 py-1 rounded-md bg-bg-secondary text-text-muted">
                    {tag}
                  </span>
                ))}
              </div>

              {exp.url && (
                <a
                  href={exp.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1 mt-3 text-xs text-accent hover:underline"
                >
                  Visit
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
