---
import { experience } from "@/data/experience";
---

<section id="experience" class="py-28 px-6">
  <div class="mx-auto max-w-5xl">
    <p class="font-mono text-xs text-text-muted mb-4 tracking-wide">
      <span class="text-accent">#</span> experience
    </p>
    <p class="text-text-muted max-w-2xl mb-12 text-sm">
      From 0-1 products to multi-crore P&Ls across fintech, agri-tech, and telecom.
    </p>

    <div class="space-y-1">
      {experience.map((exp) => (
        <div class="group py-4 border-b border-border/50 last:border-0">
          <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 mb-1.5">
            <h3 class="text-sm font-medium">
              {exp.title}
              <span class="text-accent"> @ {exp.company}</span>
              {exp.current && <span class="ml-2 text-[10px] text-emerald-500 font-mono">now</span>}
            </h3>
            <span class="font-mono text-xs text-text-muted shrink-0">{exp.period}</span>
          </div>
          <p class="text-sm text-text-muted leading-relaxed mb-2">{exp.description}</p>
          {exp.impact && (
            <p class="text-xs text-accent/70 font-mono">{exp.impact}</p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
