---
import Base from "@/layouts/Base.astro";
import Nav from "@/components/sections/Nav.astro";
import Footer from "@/components/sections/Footer.astro";

const features = [
  {
    title: "Speaker Diarization",
    description: "Automatically detect and label who is speaking in any audio file. Handles overlapping speech and multi-speaker scenarios with 95%+ accuracy.",
    icon: "users",
  },
  {
    title: "Noise Reduction",
    description: "Remove background noise, hum, hiss, and room echo in one click. Studio-quality output from noisy field recordings.",
    icon: "volume",
  },
  {
    title: "Stem Splitting",
    description: "Isolate vocals, instruments, drums, and bass into separate tracks. Perfect for remixing, karaoke, and sample extraction.",
    icon: "layers",
  },
  {
    title: "Voice Cloning",
    description: "Clone any voice with just 30 seconds of reference audio. Generate natural speech in the cloned voice for dubbing and localization.",
    icon: "mic",
  },
  {
    title: "Audio Translation",
    description: "Translate spoken audio into 30+ languages while preserving the original speaker's voice, tone, and emotion.",
    icon: "globe",
  },
  {
    title: "Transcription",
    description: "Lightning-fast speech-to-text with punctuation, timestamps, and speaker labels. Export as SRT, VTT, or plain text.",
    icon: "text",
  },
];

const stats = [
  { value: "12K+", label: "Users", sublabel: "active monthly" },
  { value: "1.2M+", label: "Files Processed", sublabel: "since launch" },
  { value: "<8s", label: "Avg. Processing", sublabel: "per minute of audio" },
];

const archSteps = [
  { step: "01", title: "Upload", description: "User uploads audio file via browser or API" },
  { step: "02", title: "Route", description: "Cloudflare Worker receives and routes the job" },
  { step: "03", title: "Process", description: "Workers AI runs inference models at the edge" },
  { step: "04", title: "Stream", description: "Results streamed back in real-time to client" },
];
---

<Base
  title="AudioPod AI - The Canva for Audio | Rakesh Roushan"
  description="AudioPod AI is a unified AI audio workstation for speaker diarization, noise reduction, stem splitting, voice cloning, translation, and transcription."
>
  <Nav />

  <main class="not-prose">
    <!-- Back link -->
    <div class="pt-24 pb-4 px-6">
      <div class="mx-auto max-w-6xl">
        <a
          href="/#projects"
          class="inline-flex items-center gap-2 text-sm text-text-muted hover:text-text transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Back to Products
        </a>
      </div>
    </div>

    <!-- Hero -->
    <section class="relative py-20 px-6 overflow-hidden">
      <!-- Gradient background -->
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,oklch(0.205_0.05_41.116),transparent_60%)]"></div>

      <div class="relative z-10 mx-auto max-w-6xl text-center">
        <!-- Status badge -->
        <div class="mb-6 inline-flex items-center gap-2 rounded-full border border-border px-4 py-1.5 text-sm text-text-muted">
          <span class="h-2 w-2 rounded-full bg-green-500 animate-pulse"></span>
          Live
        </div>

        <h1 class="text-5xl md:text-7xl font-bold tracking-tight leading-[1.1] mb-6">
          <span class="bg-gradient-to-r from-accent to-orange-400 bg-clip-text text-transparent">AudioPod AI</span>
        </h1>

        <p class="text-xl md:text-2xl text-text-secondary font-medium mb-4">
          The Canva for Audio
        </p>

        <p class="text-base md:text-lg text-text-muted max-w-2xl mx-auto mb-10 leading-relaxed">
          One unified AI-powered workstation that handles all your audio workflows -- from diarization to translation -- without switching between five different tools.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="https://audiopod.ai"
            target="_blank"
            rel="noopener noreferrer"
            class="px-6 py-3 bg-accent hover:bg-accent-hover text-white rounded-lg font-medium transition-colors inline-flex items-center gap-2"
          >
            Try AudioPod AI
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
            </svg>
          </a>
          <a
            href="#architecture"
            class="px-6 py-3 border border-border hover:border-border-hover text-text-secondary hover:text-text rounded-lg font-medium transition-colors"
          >
            See how it works
          </a>
        </div>
      </div>
    </section>

    <!-- Problem -->
    <section class="py-20 px-6 border-t border-border/50">
      <div class="mx-auto max-w-6xl">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div>
            <span class="text-xs uppercase tracking-widest text-accent font-semibold mb-4 block">The Problem</span>
            <h2 class="text-3xl md:text-4xl font-bold mb-6 leading-tight">
              Audio editing is fragmented
            </h2>
            <p class="text-text-muted leading-relaxed mb-6">
              To process a single podcast episode today, creators juggle 5+ separate tools for diarization, noise reduction, stem splitting, voice cloning, and translation. Each tool has its own UI, pricing, and learning curve. Files get lost between exports. Quality is inconsistent.
            </p>
            <p class="text-text-muted leading-relaxed">
              The result? Hours wasted on tooling instead of creating. Small teams and solo creators are priced out of professional-grade audio post-production.
            </p>
          </div>
          <div class="space-y-4">
            {["Diarization tool", "Noise reduction tool", "Stem splitter", "Voice cloning service", "Translation API", "Transcription service"].map((tool, i) => (
              <div class="flex items-center gap-4 p-4 rounded-xl border border-red-500/20 bg-red-500/5">
                <div class="w-8 h-8 rounded-lg bg-red-500/10 flex items-center justify-center shrink-0">
                  <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-red-300">{tool}</p>
                  <p class="text-xs text-text-muted">Separate subscription, separate UI</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Solution -->
    <section class="py-20 px-6 border-t border-border/50 bg-bg-secondary/30">
      <div class="mx-auto max-w-6xl">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div class="order-2 md:order-1">
            <div class="p-6 rounded-2xl border border-accent/30 bg-accent/5">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-xl bg-accent/20 flex items-center justify-center">
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="text-sm font-semibold text-accent">AudioPod AI</span>
              </div>
              <div class="space-y-3">
                {["Speaker Diarization", "Noise Reduction", "Stem Splitting", "Voice Cloning", "Audio Translation", "Transcription"].map((feature) => (
                  <div class="flex items-center gap-3 p-3 rounded-lg bg-bg/50">
                    <svg class="w-4 h-4 text-green-400 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="mt-4 pt-4 border-t border-border/50 text-center">
                <p class="text-xs text-text-muted">One platform. One subscription. One workflow.</p>
              </div>
            </div>
          </div>
          <div class="order-1 md:order-2">
            <span class="text-xs uppercase tracking-widest text-green-400 font-semibold mb-4 block">The Solution</span>
            <h2 class="text-3xl md:text-4xl font-bold mb-6 leading-tight">
              One workstation to rule them all
            </h2>
            <p class="text-text-muted leading-relaxed mb-6">
              AudioPod AI replaces your entire audio toolchain with a single, unified AI-powered workstation. Upload any audio file, choose the operations you need, and get studio-quality results in seconds -- not hours.
            </p>
            <p class="text-text-muted leading-relaxed">
              Built for podcasters, content creators, media companies, and anyone who works with audio. No audio engineering skills required.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="py-20 px-6 border-t border-border/50">
      <div class="mx-auto max-w-6xl">
        <div class="text-center mb-16">
          <span class="text-xs uppercase tracking-widest text-accent font-semibold mb-4 block">Features</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Six AI models. One interface.</h2>
          <p class="text-text-muted max-w-2xl mx-auto">
            Every feature runs on purpose-built AI models optimized for speed and quality. No compromises.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {features.map((feature) => (
            <div class="group p-6 rounded-xl border border-border hover:border-border-hover bg-bg-card/50 transition-all">
              <div class="w-10 h-10 rounded-xl bg-accent/10 flex items-center justify-center mb-4">
                {feature.icon === "users" && (
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                  </svg>
                )}
                {feature.icon === "volume" && (
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.114 5.636a9 9 0 010 12.728M16.463 8.288a5.25 5.25 0 010 7.424M6.75 8.25l4.72-4.72a.75.75 0 011.28.53v15.88a.75.75 0 01-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.01 9.01 0 012.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75z" />
                  </svg>
                )}
                {feature.icon === "layers" && (
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L12 12.75 6.429 9.75m11.142 0l4.179 2.25-9.75 5.25-9.75-5.25 4.179-2.25" />
                  </svg>
                )}
                {feature.icon === "mic" && (
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 18.75a6 6 0 006-6v-1.5m-6 7.5a6 6 0 01-6-6v-1.5m6 7.5v3.75m-3.75 0h7.5M12 15.75a3 3 0 01-3-3V4.5a3 3 0 116 0v8.25a3 3 0 01-3 3z" />
                  </svg>
                )}
                {feature.icon === "globe" && (
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 003 12c0-1.605.42-3.113 1.157-4.418" />
                  </svg>
                )}
                {feature.icon === "text" && (
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                  </svg>
                )}
              </div>
              <h3 class="font-semibold mb-2 group-hover:text-accent transition-colors">{feature.title}</h3>
              <p class="text-sm text-text-muted leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Tech Stack Callout -->
    <section class="py-20 px-6 border-t border-border/50 bg-bg-secondary/30">
      <div class="mx-auto max-w-6xl">
        <div class="p-8 md:p-12 rounded-2xl border border-accent/20 bg-gradient-to-br from-accent/5 to-transparent">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <span class="text-xs uppercase tracking-widest text-accent font-semibold mb-4 block">Tech Stack</span>
              <h2 class="text-3xl font-bold mb-4">Built on the edge</h2>
              <p class="text-text-muted leading-relaxed mb-6">
                AudioPod AI is built entirely on Cloudflare's edge network. Every audio processing request runs on Cloudflare Workers, with AI inference powered by Workers AI -- meaning models run at the edge, close to users, with minimal latency.
              </p>
              <div class="flex flex-wrap gap-3">
                {["Cloudflare Workers", "Workers AI", "R2 Storage", "Durable Objects", "WebSockets"].map((tech) => (
                  <span class="px-3 py-1.5 rounded-lg bg-bg-card border border-border text-sm text-text-secondary">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
            <div class="flex flex-col gap-3">
              <div class="p-4 rounded-xl bg-bg/80 border border-border">
                <div class="flex items-center gap-3 mb-2">
                  <div class="w-2 h-2 rounded-full bg-green-400"></div>
                  <span class="text-sm font-medium">Edge-first architecture</span>
                </div>
                <p class="text-xs text-text-muted">Compute runs in 300+ cities worldwide. Zero cold starts.</p>
              </div>
              <div class="p-4 rounded-xl bg-bg/80 border border-border">
                <div class="flex items-center gap-3 mb-2">
                  <div class="w-2 h-2 rounded-full bg-green-400"></div>
                  <span class="text-sm font-medium">GPU inference at the edge</span>
                </div>
                <p class="text-xs text-text-muted">Workers AI provides GPU-powered model inference without managing infrastructure.</p>
              </div>
              <div class="p-4 rounded-xl bg-bg/80 border border-border">
                <div class="flex items-center gap-3 mb-2">
                  <div class="w-2 h-2 rounded-full bg-green-400"></div>
                  <span class="text-sm font-medium">Real-time streaming</span>
                </div>
                <p class="text-xs text-text-muted">Results streamed via WebSockets. No polling. Instant feedback.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Architecture Diagram -->
    <section id="architecture" class="py-20 px-6 border-t border-border/50">
      <div class="mx-auto max-w-6xl">
        <div class="text-center mb-16">
          <span class="text-xs uppercase tracking-widest text-accent font-semibold mb-4 block">Architecture</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">How it works</h2>
          <p class="text-text-muted max-w-2xl mx-auto">
            From upload to results in seconds. Here's the processing pipeline behind every AudioPod AI job.
          </p>
        </div>

        <!-- Flow diagram -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          {archSteps.map((step, i) => (
            <div class="relative">
              <div class="p-6 rounded-xl border border-border bg-bg-card/50 h-full">
                <div class="text-xs font-mono text-accent mb-3">{step.step}</div>
                <h3 class="font-semibold mb-2">{step.title}</h3>
                <p class="text-sm text-text-muted leading-relaxed">{step.description}</p>
              </div>
              {i < archSteps.length - 1 && (
                <div class="hidden md:flex absolute top-1/2 -right-2 -translate-y-1/2 z-10">
                  <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                  </svg>
                </div>
              )}
            </div>
          ))}
        </div>

        <!-- Expanded flow -->
        <div class="mt-12 p-6 rounded-2xl border border-border bg-bg-card/30">
          <div class="flex flex-col md:flex-row items-center justify-between gap-6 text-center">
            <div class="flex flex-col items-center gap-2">
              <div class="w-12 h-12 rounded-xl bg-bg-secondary border border-border flex items-center justify-center">
                <svg class="w-6 h-6 text-text-secondary" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
                </svg>
              </div>
              <span class="text-xs text-text-muted">Audio Upload</span>
            </div>

            <svg class="w-8 h-4 text-border rotate-90 md:rotate-0 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
            </svg>

            <div class="flex flex-col items-center gap-2">
              <div class="w-12 h-12 rounded-xl bg-accent/10 border border-accent/30 flex items-center justify-center">
                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0a3 3 0 01-3 3m0 3h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008zm-3 6h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008z" />
                </svg>
              </div>
              <span class="text-xs text-text-muted">CF Worker</span>
            </div>

            <svg class="w-8 h-4 text-border rotate-90 md:rotate-0 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
            </svg>

            <div class="flex flex-col items-center gap-2">
              <div class="w-12 h-12 rounded-xl bg-purple-500/10 border border-purple-500/30 flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                </svg>
              </div>
              <span class="text-xs text-text-muted">Workers AI</span>
            </div>

            <svg class="w-8 h-4 text-border rotate-90 md:rotate-0 shrink-0" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
            </svg>

            <div class="flex flex-col items-center gap-2">
              <div class="w-12 h-12 rounded-xl bg-green-500/10 border border-green-500/30 flex items-center justify-center">
                <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
                </svg>
              </div>
              <span class="text-xs text-text-muted">Stream Results</span>
            </div>
          </div>
        </div>
      </div>
