---
import Base from "@/layouts/Base.astro";
import Nav from "@/components/sections/Nav.astro";
import Footer from "@/components/sections/Footer.astro";

const currentlyReading = [
  { title: "The Lean Product Playbook", author: "Dan Olsen", genre: "Product Management", progress: 60 },
  { title: "Atomic Habits", author: "James Clear", genre: "Personal Development", progress: 80 },
];

const topBooks = [
  { title: "The Lean Startup", author: "Eric Ries", rating: 5, year: 2023, insight: "The only way to win is to learn faster than anyone else." },
  { title: "Continuous Discovery Habits", author: "Teresa Torres", rating: 5, year: 2024, insight: "Discovery isn't a phase, it's a continuous habit." },
  { title: "Turn the Ship Around", author: "David Marquet", rating: 5, year: 2023, insight: "Don't move information to authority, move authority to information." },
  { title: "Empowered", author: "Marty Cagan", rating: 5, year: 2025, insight: "The most important thing leaders do is hire and develop great people." },
  { title: "Influence", author: "Robert Cialdini", rating: 5, year: 2024, insight: "People say yes to those they owe, like, and trust — in that order." },
  { title: "The 7 Habits of Highly Effective People", author: "Stephen Covey", rating: 5, year: 2023, insight: "Most people focus on urgent, not important. Excellence lives in the important-but-not-urgent quadrant." },
  { title: "Hooked", author: "Nir Eyal", rating: 5, year: 2025, insight: "The Hook Model: Trigger → Action → Variable Reward → Investment." },
  { title: "Project Hail Mary", author: "Andy Weir", rating: 5, year: 2024, insight: "The universe is harsh, but humans are endlessly resourceful." },
  { title: "The Three-Body Problem", author: "Liu Cixin", rating: 5, year: 2023, insight: "Survival is the most fundamental drive. Everything else is secondary." },
  { title: "Meditations", author: "Marcus Aurelius", rating: 4, year: 2023, insight: "The impediment to action advances action. What stands in the way becomes the way." },
];

const byCategory = [
  {
    name: "Product Management & Tech",
    books: [
      { title: "Empowered", author: "Marty Cagan", status: "read", rating: 5 },
      { title: "Hooked", author: "Nir Eyal", status: "read", rating: 5 },
      { title: "Continuous Discovery Habits", author: "Teresa Torres", status: "read", rating: 5 },
      { title: "Escaping the Build Trap", author: "Melissa Perri", status: "read", rating: 4 },
      { title: "Product-Led Growth", author: "Wes Bush", status: "read", rating: 4 },
      { title: "Inspired", author: "Marty Cagan", status: "queue" },
      { title: "The Mom Test", author: "Rob Fitzpatrick", status: "queue" },
    ],
  },
  {
    name: "Business & Entrepreneurship",
    books: [
      { title: "The Lean Startup", author: "Eric Ries", status: "read", rating: 5 },
      { title: "Good to Great", author: "Jim Collins", status: "read", rating: 4 },
      { title: "The Psychology of Money", author: "Morgan Housel", status: "read", rating: 5 },
      { title: "Zero to One", author: "Peter Thiel", status: "queue" },
      { title: "The Hard Thing About Hard Things", author: "Ben Horowitz", status: "queue" },
    ],
  },
  {
    name: "Leadership & Management",
    books: [
      { title: "Turn the Ship Around", author: "David Marquet", status: "read", rating: 5 },
      { title: "The Five Dysfunctions of a Team", author: "Patrick Lencioni", status: "read", rating: 4 },
      { title: "High Output Management", author: "Andy Grove", status: "queue" },
      { title: "Radical Candor", author: "Kim Scott", status: "queue" },
    ],
  },
  {
    name: "Psychology & Decision Making",
    books: [
      { title: "Influence", author: "Robert Cialdini", status: "read", rating: 5 },
      { title: "Predictably Irrational", author: "Dan Ariely", status: "read", rating: 4 },
      { title: "Nudge", author: "Richard Thaler", status: "read", rating: 4 },
      { title: "Thinking, Fast and Slow", author: "Daniel Kahneman", status: "queue" },
    ],
  },
  {
    name: "Productivity & Focus",
    books: [
      { title: "Essentialism", author: "Greg McKeown", status: "read", rating: 4 },
      { title: "The 7 Habits of Highly Effective People", author: "Stephen Covey", status: "read", rating: 5 },
      { title: "Getting Things Done", author: "David Allen", status: "read", rating: 4 },
      { title: "Deep Work", author: "Cal Newport", status: "queue" },
    ],
  },
  {
    name: "Fiction & Philosophy",
    books: [
      { title: "Project Hail Mary", author: "Andy Weir", status: "read", rating: 5 },
      { title: "The Three-Body Problem", author: "Liu Cixin", status: "read", rating: 5 },
      { title: "Exhalation", author: "Ted Chiang", status: "read", rating: 4 },
      { title: "Meditations", author: "Marcus Aurelius", status: "read", rating: 4 },
      { title: "Dune", author: "Frank Herbert", status: "queue" },
    ],
  },
];

const stats = { total: 35, avgPerYear: 17, tracking: "2023" };
---

<Base title="Reading List - Rakesh Roushan" description="Books that shaped how I think about products, leadership, and life.">
  <Nav />
  <main class="min-h-screen pt-28 pb-24 px-6">
    <div class="mx-auto max-w-4xl">
      <a href="/" class="font-mono text-xs text-text-muted hover:text-accent transition-colors mb-8 inline-block">&larr; ~/home</a>

      <p class="font-mono text-xs text-text-muted mb-4 tracking-wide">
        <span class="text-accent">#</span> reading
      </p>
      <p class="text-text-secondary text-sm mb-2 max-w-2xl leading-relaxed">
        Books that shaped how I think about products, leadership, and life.
      </p>
      <p class="text-xs text-text-muted/50 font-mono mb-16">
        {stats.total} books &middot; tracking since {stats.tracking}
      </p>

      <!-- Currently Reading -->
      <section class="mb-16">
        <p class="font-mono text-xs text-text-muted mb-6 tracking-wide">
          <span class="text-emerald-500">&gt;</span> currently reading
        </p>
        <div class="space-y-1">
          {currentlyReading.map((book) => (
            <div class="py-3 border-b border-border/50">
              <div class="flex items-baseline justify-between gap-4 mb-2">
                <div>
                  <span class="text-sm font-medium">{book.title}</span>
                  <span class="text-xs text-text-muted ml-2">— {book.author}</span>
                </div>
                <span class="text-xs font-mono text-accent shrink-0">{book.progress}%</span>
              </div>
              <div class="w-full h-px bg-bg-secondary overflow-hidden">
                <div class="h-full bg-accent" style={`width: ${book.progress}%`} />
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Top Books -->
      <section class="mb-16">
        <p class="font-mono text-xs text-text-muted mb-6 tracking-wide">
          <span class="text-accent">&gt;</span> books that changed me
        </p>
        <div class="space-y-1">
          {topBooks.map((book, i) => (
            <div class="py-3 border-b border-border/50">
              <div class="flex items-start gap-4">
                <span class="text-xs font-mono text-text-muted/30 shrink-0 w-5 pt-0.5">{String(i + 1).padStart(2, '0')}</span>
                <div>
                  <span class="text-sm font-medium">{book.title}</span>
                  <span class="text-xs text-text-muted ml-2">— {book.author}, {book.year}</span>
                  <p class="text-xs text-text-muted/60 mt-1 italic">"{book.insight}"</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- By Category -->
      <section class="mb-16">
        <p class="font-mono text-xs text-text-muted mb-6 tracking-wide">
          <span class="text-accent">&gt;</span> library
        </p>
        <div class="space-y-8">
          {byCategory.map((category) => (
            <div>
              <p class="font-mono text-xs text-text-muted/50 mb-3">{category.name.toLowerCase()}</p>
              <div class="space-y-0">
                {category.books.map((book) => (
                  <div class="flex items-center justify-between py-2 border-b border-border/30 last:border-0">
                    <div class="flex items-center gap-2">
                      <span class={`inline-block w-1.5 h-1.5 rounded-full shrink-0 ${book.status === 'read' ? 'bg-emerald-500' : 'bg-yellow-500/60'}`} />
                      <span class="text-sm">{book.title}</span>
                      <span class="text-xs text-text-muted">— {book.author}</span>
                    </div>
                    {book.rating && (
                      <span class="text-xs text-text-muted/40 font-mono shrink-0">
                        {"*".repeat(book.rating)}
                      </span>
                    )}
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Recommendations -->
      <section class="mb-16">
        <p class="font-mono text-xs text-text-muted mb-6 tracking-wide">
          <span class="text-accent">&gt;</span> recommendations
        </p>
        <div class="grid md:grid-cols-2 gap-3">
          <div class="p-4 rounded-lg bg-bg-card">
            <p class="text-sm font-medium mb-3">For New Product Managers</p>
            <ul class="space-y-1.5 text-xs text-text-muted">
              <li>Continuous Discovery Habits — Teresa Torres</li>
              <li>Hooked — Nir Eyal</li>
              <li>The Lean Startup — Eric Ries</li>
            </ul>
          </div>
          <div class="p-4 rounded-lg bg-bg-card">
            <p class="text-sm font-medium mb-3">For Aspiring Leaders</p>
            <ul class="space-y-1.5 text-xs text-text-muted">
              <li>Turn the Ship Around — David Marquet</li>
              <li>Radical Candor — Kim Scott</li>
              <li>High Output Management — Andy Grove</li>
            </ul>
          </div>
          <div class="p-4 rounded-lg bg-bg-card">
            <p class="text-sm font-medium mb-3">For People Feeling Stuck</p>
            <ul class="space-y-1.5 text-xs text-text-muted">
              <li>Essentialism — Greg McKeown</li>
              <li>Atomic Habits — James Clear</li>
              <li>Range — David Epstein</li>
            </ul>
          </div>
          <div class="p-4 rounded-lg bg-bg-card">
            <p class="text-sm font-medium mb-3">For Entrepreneurs</p>
            <ul class="space-y-1.5 text-xs text-text-muted">
              <li>The Lean Startup — Eric Ries</li>
              <li>Zero to One — Peter Thiel</li>
              <li>The Hard Thing About Hard Things — Ben Horowitz</li>
            </ul>
          </div>
        </div>
      </section>
    </div>
  </main>
  <Footer />
</Base>
